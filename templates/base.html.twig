	{% endfor %}
<nav >
	<ul>
		<li>
			<a href="{{ path('home_index') }}">
				<strong>Simple symfony crud</strong>
			</a>
		</li>
	</ul>
	<ul>
		<li><a href="{{ path('home_index') }}">Home</a></li>
		<li><a href="{{ path('product_index') }}">Products</a></li>
		<li><a href="{{ path('app_logout') }}">Logout</a></li>
	</ul>
</nav>

{% endif %}

{% block body %}{% endblock %}
</body>
</html>
